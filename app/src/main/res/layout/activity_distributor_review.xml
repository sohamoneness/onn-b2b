            <ListView
                android:id="@+id/cartList"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_400"
                android:layout_margin="@dimen/dp_10"
                android:dividerHeight="@dimen/dp_10"
                android:divider="@android:color/transparent"/>
            <EditText
                android:id="@+id/etComment"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:inputType="textEmailAddress|textMultiLine"
                android:lines="20"
                android:minLines="5"
                android:background="@drawable/rounded_corner_edit_txt"
                android:scrollHorizontally="false"
                android:scrollbars="vertical"
                android:gravity="start"
                android:padding="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:hint="@string/comment_to_distributord"
                android:textColorHint="@color/lbl_color1"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/dp_20"/>
            <Button
                android:id="@+id/btnPlaceOrder"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_below="@+id/etMobile"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@drawable/rounded_corner_btn"
                android:text="@string/place_order_now"
                android:gravity="center"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />
            <Button
                android:id="@+id/btnContinueShopping"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:layout_below="@+id/etMobile"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@drawable/rounded_corner_btn"
                android:text="@string/continue_shopping"
                android:gravity="center"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16" />
