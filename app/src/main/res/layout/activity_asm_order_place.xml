<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AsmOrderPlaceActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:id="@+id/mToolbarRl"
        android:background="@color/colorPrimary"
        android:paddingRight="@dimen/dp_8"
        android:paddingLeft="@dimen/dp_8"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_arrow"
            android:layout_centerVertical="true"
            android:layout_gravity="center"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Place Order For ASE"
                android:textSize="@dimen/sp_18"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_50"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dp_8"
        android:layout_below="@+id/mToolbarRl">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:text="Select ASE : "
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:id="@+id/aseSp"
            android:popupBackground="@color/white"
            android:layout_margin="@dimen/dp_8"
            android:background="@drawable/rounded_corner_spinner_bg"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:text="Select Store : "
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_8"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_margin="@dimen/dp_8"
            android:id="@+id/storeSp"
            android:popupBackground="@color/white"
            android:background="@drawable/rounded_corner_spinner_bg"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:id="@+id/btnGotoProductList"
            android:text="Go To Product List"
            android:gravity="center"
            android:layout_margin="@dimen/dp_16"
            android:background="@drawable/rounded_corner_btn"/>

    </LinearLayout>

</RelativeLayout>