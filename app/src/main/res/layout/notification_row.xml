<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dp_8"
    android:layout_margin="4dp"
    android:background="@drawable/rounded_store_bg">

    <LinearLayout
        android:layout_width="@dimen/dp_8"
        android:layout_height="@dimen/dp_8"
        android:id="@+id/redDotLL"
        android:orientation="horizontal"
        android:background="@drawable/red_dot_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="4dp"
        android:layout_toRightOf="@+id/redDotLL"
        android:id="@+id/titleLL">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvNotiHeader"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:layout_weight=".2"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvDate"
            android:gravity="center_vertical|right"
            android:layout_alignParentRight="true"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_10"
            android:layout_weight=".8"/>


    </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvNotiBody"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_below="@+id/titleLL"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_12"/>

</RelativeLayout>